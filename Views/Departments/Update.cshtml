<h1> Update Department</h1>

<form method="post" asp-action="Update" asp-controller="Departments" class="w-50">

    <div>
        <label class="form-label" asp-for="Id"></label>
        <input class="form-control" asp-for="Id" readonly />
    </div>

    <div>
        <label class="form-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <button class="btn btn-primary mt-3 px-3" type="submit">Save Changes</button>
</form>