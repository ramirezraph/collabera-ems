@model List<Employee>

<div class="d-flex align-items-center">
    <h1 class="me-3">Employees</h1>
    <a asp-action="Create" asp-controller="Employees" class="btn btn-primary">Add new employee</a>
</div>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Birthdate</th>
            <th scope="col">Email</th>
            <th scope="col">Phone</th>
            <th scope="col">Department</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Name</td>
                <td>@employee.DateOfBirth</td>
                <td>@employee.Email</td>
                <td>@employee.Phone</td>
                <td>@employee.Department.Name</td>
                <td>
                    <a asp-controller="Employees" asp-action="Details" asp-route-employeeId="@employee.Id"
                        class="btn btn-sm btn-secondary">View</a>
                    <a asp-controller="Employees" asp-action="Update" asp-route-employeeId="@employee.Id"
                        class="btn btn-sm btn-warning">Edit</a>
                    <a asp-controller="Employees" asp-action="Delete" asp-route-employeeId="@employee.Id"
                        class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>